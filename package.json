{
  "name": "swgpfha-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:env": "cross-env NODE_ENV=development dotenv -e .env.development --",
    "prod:env": "cross-env NODE_ENV=production dotenv -e .env.production --",

    "dev:db:migrate": "cross-env PRISMA_SCHEMA_PATH=prisma/dev.schema.prisma npx prisma migrate dev -n init_media",
    "dev:db:generate": "cross-env PRISMA_SCHEMA_PATH=prisma/dev.schema.prisma npx prisma generate",
    "dev:db:reset": "cross-env PRISMA_SCHEMA_PATH=prisma/dev.schema.prisma npx prisma migrate reset -f",

    "prod:db:migrate": "cross-env PRISMA_SCHEMA_PATH=prisma/prod.schema.prisma npx prisma migrate deploy",
    "prod:db:generate": "cross-env PRISMA_SCHEMA_PATH=prisma/prod.schema.prisma npx prisma generate",

    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production dotenv -e .env.production -- tsx src/index.ts",

    "postinstall": "cross-env PRISMA_SCHEMA_PATH=prisma/dev.schema.prisma npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2"
  }
}
